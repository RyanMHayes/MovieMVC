@model List<MovieMVC.Models.Movie>
@*VIEW, INDEX ****@

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Title</th>
        <th>Streaming Service</th>
        <td>Genre</td>
    </tr>






    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.StreamingService.StreamingService</td> 
            <td>@movie.Genre.Genre</td>
        </tr>
    }

</table>

@if (Model.Count == 0)
{
    <p>No movies have been added yet!</p>
}

    <p>See a mistake?  Let's <a asp-controller="Movie" asp-action="Remove">delete that entry.</a> </p>
    <p>Then we can <a asp-controller="Movie" asp-action="Add">add it</a> again to the database!</p>

    <br />

