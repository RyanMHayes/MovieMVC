@model MovieMVC.ViewModels.AddMovieViewModel

<h1>Add a Movie</h1>

<form asp-controller="Movie" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreamingServiceID"></label>
        <select asp-for="StreamingServiceID" asp-items="Model.StreamingServices"></select>
    </div>

    <div class="form-group">
        <label asp-for="GenreID"></label>
        <select asp-for="GenreID" asp-items="Model.Genres"></select>
    </div>

    <p>If you don't see a genre you're looking for, try <a asp-controller="Genre" asp-action="Add">adding</a> one!</p>

    <p>Same goes for <a asp-controller="StreamingService" asp-action="Add">streaming services!</a> </p>

    <input type="submit" value="Add Movie" />

</form>
