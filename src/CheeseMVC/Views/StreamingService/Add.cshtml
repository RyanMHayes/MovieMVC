@model MovieMVC.ViewModels.AddStreamingServiceViewModel

<h2>If there's a streaming service you didn't see, add it!</h2>

<form asp-controller="StreamingService" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Add Streaming Service" />

</form>